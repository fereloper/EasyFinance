@model IEnumerable<EasyFinance.Models.LoanProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Loan Products</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.FinancialMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinancialMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenureMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenureMax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeMax)
            </th>*@
            @*<th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Banks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanTypes)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-outline-success"><i class="fa fa-plus-square"></i> Loan Product</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterestRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.FinancialMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinancialMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenureMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenureMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeMax)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Banks.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanTypes.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-table fa-lg"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to delete?')"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
